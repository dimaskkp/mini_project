@model List<ApplicationAPI.Models.GlobalModel.Message>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form method="get" action="@Url.Action("Index")">
    <label>Page:</label>
    <input type="number" name="page" value="@ViewBag.CurrentPage" min="1" max="@ViewBag.TotalPages" required />

    <label>Size:</label>
    <input type="number" name="size" value="@ViewBag.PageSize" min="1" required />

    <button type="submit">Apply</button>
</form>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.title</td>
        </tr>
    }
</table>
